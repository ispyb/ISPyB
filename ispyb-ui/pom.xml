			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>copy-resources</id>
								<phase>validate</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<echo message="Copy securityfilter files ..." />
										<copy
											file="${basedir}/src/main/webapp/mergedir/servlet-securityfilter.xml"
											tofile="${basedir}/src/main/webapp/mergedir/servlets.xml"
											overwrite="true" />
										<copy
											file="${basedir}/src/main/webapp/mergedir/web-security-securityfilter.xml"
											tofile="${basedir}/src/main/webapp/mergedir/web-security.xml"
											overwrite="true" />
										<copy
											file="${basedir}/src/main/webapp/mergedir/securityfilter-config.xml"
											tofile="${build.directory}//WEB-INF/securityfilter-config.xml"
											overwrite="true" />
										<echo message="Copy of securityfilter files done!" />
										<echo message="project base direct: ${build.directory}" />
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>

			<properties>

				<build.directory>${project.build.directory}/${project.artifactId}-${project.version}</build.directory>

			</properties>
		</profile>
